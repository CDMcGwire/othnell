@import url('https://fonts.googleapis.com/css2?family=David+Libre:wght@400;500;700&display=swap')

*
  box-sizing border-box

html, body
  min-height 100%
  margin 0
  padding 0
  font 14pt "David Libre", serif
  color white
  background-color hsl(0, 72%, 24%)

select
  color white
  background-color hsla(0, 0%, 0%, 0.2)
option
  font-size 0.8em

button
  color white
  background-color grey

button, input, select
  font 1em "David Libre", serif
  border none

h1, h2, h3, h4, h5, h6, p, ul, li, a, button, input, select, option
  margin 0
  padding 0
  box-sizing border-box

a
  text-decoration none

li
  list-style none

.row
  display flex
  flex-direction row

.col
  display flex
  flex-direction column

.grow
  flex 1 0 auto

.m-spaced
  justify-content space-between

.m-space-around
  justify-content space-around

.m-center
  justify-content center

.m-end
  justify-content flex-end

.c-start
  align-items flex-start

.c-center
  align-items center

.c-end
  align-items flex-end

.txt-center
  text-align center

.txt-right
  text-align right

.spacer-thin
  flex 0 0 5px

.spacer-med
  flex 0 0 10px

.filler
  flex 1 1 100%

.dropdown
  display flex
  position relative
  padding 0.5em
  background-color grey

  a
    color white
  
  ul
    display none
    position absolute
    left 0
    margin-top 1.5em
    background-color grey

    li
      clear both
      a
        display block
        padding 1ex
        color white
    li:hover
      background-color red

.dropdown:hover,
.dropdown:focus-within
  cursor pointer
  background-color red
  > ul, ul:hover
    display block